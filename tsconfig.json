{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowJs": false,
    "noImplicitAny": false,
    "strict": true,
    "outDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/*.ts",
    "types/*.ts",
    "rollup.config.ts"
  ]
}
